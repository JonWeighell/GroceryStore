@using FruitSystem.Data.Classes
@model Product

@{
    ViewData["Title"] = "Edit Product";
}

<h1>Edit Product</h1>

<form method="post" class="card">
    <input type="hidden" asp-for="Id" />
    <div class="card-body">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input class="form-control" type="text" required asp-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Price">Price (£)</label>
            <input class="form-control" type="number" required min="0.01" asp-for="Price" step=".01" />
        </div>
        <div class="form-group">
            <label asp-for="Stock">Stock</label>
            <input class="form-control" type="number" required min="0" asp-for="Stock" />
        </div>
    </div>
    <div class="card-footer text-right">
        <input type="submit" class="btn btn-primary" value="Save" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
